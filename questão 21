#include <stdio.h>

int main() {
    int quantidade, numero, maior_numero, contador_maior = 0;

    printf("Digite a quantidade de números a serem lidos: ");
    scanf("%d", &quantidade);

    printf("Digite os números:\n");
    for (int i = 0; i < quantidade; i++) {
        scanf("%d", &numero);

        if (i == 0 || numero > maior_numero) {
            maior_numero = numero;
            contador_maior = 1;
        } else if (numero == maior_numero) {
            contador_maior++;
        }
    }

    printf("O maior número é %d e ele foi lido %d vezes.\n", maior_numero, contador_maior);

    return 0;
}
